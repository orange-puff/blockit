{
  "manifest_version": 2,
  "name": "BlockIt",
  "version": "1.0",
  "description": "There are sites that we spend too much time on. BlockIt allows you to quickly block websites to avoid using them.",
  "homepage_url": "https://github.com/orange-puff/blockit",
  "icons": {
    "48": "icons/red-brick-wall-48.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/red-brick-wall-48.png",
    "default_title": "BlockIt",
    "default_popup": "popup/blockit.html"
  },
  "background": {
    "page": "background/background-page.html"
  }
}